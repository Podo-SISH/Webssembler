{
  "manifest_version": 2,
  "name": "Webssembler",
  "version": "1.0",
  "description": "Better experience on searching.",
  "browser_action": {
    "default_icon": {
      "19": "img/icon19.png",
      "38": "img/icon38.png"
    },
    "default_popup": "popup.html"
  },
  "icons": { 
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png",
    "350": "img/icon350.png"
  },
  "content_scripts": [ {
      "matches": [ "<all_urls>" ],
      "js": [ "jquery/jquery.js", "jquery/jquery.highlight.js", "multi_highlight/multi_highlight.js" ],
      "css": [ "highlight.css" ]
   } ],
  "background": {
    "scripts": [ "lib.js", "background.js" ],
    "persistent": false
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Activate the extension"
    }
  },
  "permissions": [
  "activeTab", "http://*/*", "https://*/*", "storage", "contextMenus"
  ]
}
